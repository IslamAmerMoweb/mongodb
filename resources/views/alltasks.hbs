{{>header}}
{{>nav}}
<main class="container">
    <h2 class="text-center">All Tasks</h2>
    <div class="eye d-flex justify-content-between my-5">
        <a href="/addtask" class="btn btn-secondary">ADD TASKS</a>
        <a href="/delete" class="btn btn-danger">Delete all</a>
    </div>
    <form action="/search" method="get" class="my-3">
        <input type="text" name="title" class="form-control" placeholder="Search only by full title">
        <button class="btn btn-secondary mt-3">Search</button>
    </form>
    <table class="table able table-dark table-striped text-center">
        <thead>
            <tr>
                <th>Last update</th>
                <th>Title</th>
                <th>Content</th>
                <th>Status</th>
                <th>Todo</th>
            </tr>
        </thead>
        <tbody>
            {{#if newtasks}}
                {{#each newtasks}}
                    <tr>
                        <td>{{date}}</td>
                        <td>{{title}}</td>
                        <td>{{content}}</td>
                        <td>{{status}}</td>
                        <td>
                            <a href="/status/{{_id}}" class="btn btn-outline-info">Status</a>
                            <a href="/show/{{_id}}" class="btn btn-outline-success">Show</a>
                            <a href="/edit/{{_id}}" class="btn btn-outline-warning">Edit</a>
                            <a href="/del/{{_id}}" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="5">No Tasks Yet</td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</main>
{{>footer}}