{{>header}}
<main class="container w-75 m-auto mt-5 pt-5">
    <table class="table able table-dark table-striped text-center">
        <thead>
            <tr>
                <th>id</th>
                <th>Title</th>
                <th>Content</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#if search}}
                {{#each search}}
                    <tr>
                        <td>{{_id}}</td>
                        <td>{{title}}</td>
                        <td>{{content}}</td>
                        <td>{{Status}}</td>
                    </tr>
                {{/each}}
            {{else}}
                <h3 class="text-center text-danger my-5">NOT FOUND SEARCH</h3>
            {{/if}}
        </tbody>
    </table>
    <a href="/" class="btn btn-primary">Back to menu</a>
</main>
{{>footer}}